<Window x:Class="nvidia_FE_lighting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="NVIDIA FE Lighting"
        SizeToContent="WidthAndHeight"
        Background="{StaticResource AppBackgroundBrush}"
        MinWidth="900"
        MinHeight="700">
    <Grid Margin="18">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                CornerRadius="18"
                BorderThickness="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0"
                                     EndPoint="1,1">
                    <GradientStop Color="#0F172A"
                                  Offset="0"/>
                    <GradientStop Color="#0B1220"
                                  Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <ScrollViewer VerticalScrollBarVisibility="Auto"
                          Padding="24">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="NVIDIA FE Lighting"
                               FontSize="26"
                               FontWeight="Bold"
                               Margin="0,0,0,6"/>
                    <TextBlock Text="Control illumination zones on your Founders Edition GPU"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,18"/>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <!-- GPU Selection -->
                        <Border Grid.Column="0"
                                Style="{StaticResource CardBorderStyle}">
                            <StackPanel Orientation="Vertical"
                                        Margin="4">
                                <TextBlock Text="Select GPU"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <ComboBox x:Name="gpuSelectComboBox"
                                              IsReadOnly="True"
                                              MinWidth="220"
                                              SelectionChanged="gpuSelectComboBox_SelectionChanged"
                                              VerticalContentAlignment="Center"/>
                                    <Button x:Name="gpuSelectDetectIllumZones"
                                            Content="Detect Zones"
                                            Click="gpuSelectDetectIllumZones_Click"
                                            Margin="10,0,0,0"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- GPU Info -->
                        <Border Grid.Column="1"
                                Style="{StaticResource CardBorderStyle}"
                                Margin="12,0,0,0">
                            <StackPanel Orientation="Vertical"
                                        Margin="4">
                                <TextBlock Text="GPU Information"
                                           FontWeight="SemiBold"
                                           FontSize="14"
                                           Margin="0,0,0,10"/>
                                <TextBlock x:Name="gpuNameText"
                                           FontWeight="Bold"
                                           Text="Name: "
                                           Margin="0,0,0,6"/>
                                <TextBlock x:Name="gpuInfoText"
                                           Text="Details: "
                                           Margin="0,0,0,4"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="gpuSystemTypeText"
                                           Text="System Type: "
                                           Margin="0,0,0,4"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="gpuDriverVersionText"
                                           Margin="0,0,0,4"
                                           Text="Driver Version: "
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="gpuInterfaceVersionText"
                                           Text="NVAPI Interface: "
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Zones Panel -->
                    <Border Style="{StaticResource CardBorderStyle}">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal"
                                        VerticalAlignment="Center"
                                        Margin="0,0,0,8">
                                <TextBlock Text="Illumination Zones"
                                           FontWeight="SemiBold"
                                           FontSize="14"/>
                                <TextBlock Text="Live state and controls"
                                           Margin="8,0,0,0"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                            <ScrollViewer VerticalScrollBarVisibility="Auto"
                                          Height="400">
                                <ItemsControl x:Name="gpuIlluminationZones">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </ScrollViewer>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Status bar -->
        <Border Grid.Row="1"
                Background="{StaticResource SurfaceBrush}"
                BorderBrush="{StaticResource CardBorderBrush}"
                BorderThickness="1"
                CornerRadius="10"
                Padding="10"
                Margin="0,12,0,0">
            <DockPanel>
                <TextBlock x:Name="statusText"
                           Text="Ready"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           VerticalAlignment="Center"/>
                <Ellipse Width="10"
                         Height="10"
                         Fill="{StaticResource AccentAltBrush}"
                         Margin="8,0,0,0"
                         VerticalAlignment="Center"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>
