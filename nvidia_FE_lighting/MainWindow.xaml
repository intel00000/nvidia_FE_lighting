<Window x:Class="nvidia_FE_lighting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="NVIDIA FE Lighting"
        SizeToContent="WidthAndHeight"
        Background="{StaticResource AppBackgroundBrush}"
        MinWidth="800"
        MinHeight="600">
    <Grid Margin="12">
        <Border CornerRadius="18"
                BorderThickness="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0F172A" Offset="0"/>
                    <GradientStop Color="#0B1220" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="12">
                <StackPanel Orientation="Vertical">
                    <TextBlock Text="NVIDIA FE Lighting"
                               FontSize="26"
                               FontWeight="Bold"
                               Margin="0,0,0,12"/>
                    <TextBlock Text="Control illumination zones on your Founders Edition GPU"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="36,0,0,18"/>

                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>

                        <!-- GPU Selection -->
                        <Border x:Name="gpuSelectCard"
                                Grid.Column="0"
                                Style="{StaticResource CardBorderStyle}">
                            <StackPanel Orientation="Vertical" Margin="4">
                                <TextBlock Text="Select GPU" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal"
                                            VerticalAlignment="Center">
                                    <ComboBox x:Name="gpuSelectComboBox" IsReadOnly="True" MinWidth="200"
                                              SelectionChanged="gpuSelectComboBox_SelectionChanged"
                                              VerticalContentAlignment="Center"
                                              Background="{StaticResource CardBackgroundBrush}"
                                              Foreground="{StaticResource TextPrimaryBrush}"
                                              BorderBrush="{StaticResource CardBorderBrush}"/>
                                    <Button x:Name="gpuSelectDetectIllumZones"
                                            Content="Detect Zones"
                                            Click="gpuSelectDetectIllumZones_Click"
                                            Margin="12,0,0,0"
                                            Foreground="{StaticResource TextPrimaryBrush}"
                                            Background="{StaticResource CardBorderBrush}"
                                            BorderBrush="{StaticResource CardBorderBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- GPU Info -->
                        <Border x:Name="gpuInfoCard"
                                Grid.Column="1"
                                Style="{StaticResource CardBorderStyle}"
                                Margin="12,0,0,0">
                            <StackPanel Orientation="Vertical" Margin="4">
                                <TextBlock Text="GPU Information" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                                <TextBlock x:Name="gpuNameText" FontWeight="Bold" Text="Name: " Margin="0,0,0,6"/>
                                <TextBlock x:Name="gpuInfoText" Text="Details: " Margin="0,0,0,4" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="gpuSystemTypeText" Text="System Type: " Margin="0,0,0,4" Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="gpuDriverVersionText" Margin="0,0,0,4" Text="Driver Version: " Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="gpuInterfaceVersionText" Text="NVAPI Interface: " Foreground="{StaticResource TextSecondaryBrush}"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Profiles -->
                    <Border Style="{StaticResource CardBorderStyle}">
                        <StackPanel Orientation="Vertical" Margin="4">
                            <TextBlock Text="Lighting Profiles" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="4">
                                    <TextBlock Text="Profile 1" FontSize="12" Margin="0,0,0,6" HorizontalAlignment="Center"/>
                                    <Button x:Name="saveProfile1" Content="Save" Click="SaveProfile_Click" Tag="1" Margin="2"/>
                                    <Button x:Name="loadProfile1" Content="Load" Click="LoadProfile_Click" Tag="1" Margin="2"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="4">
                                    <TextBlock Text="Profile 2" FontSize="12" Margin="0,0,0,6" HorizontalAlignment="Center"/>
                                    <Button x:Name="saveProfile2" Content="Save" Click="SaveProfile_Click" Tag="2" Margin="2"/>
                                    <Button x:Name="loadProfile2" Content="Load" Click="LoadProfile_Click" Tag="2" Margin="2"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Margin="4">
                                    <TextBlock Text="Profile 3" FontSize="12" Margin="0,0,0,6" HorizontalAlignment="Center"/>
                                    <Button x:Name="saveProfile3" Content="Save" Click="SaveProfile_Click" Tag="3" Margin="2"/>
                                    <Button x:Name="loadProfile3" Content="Load" Click="LoadProfile_Click" Tag="3" Margin="2"/>
                                </StackPanel>

                                <StackPanel Grid.Column="3" Margin="4">
                                    <TextBlock Text="Profile 4" FontSize="12" Margin="0,0,0,6" HorizontalAlignment="Center"/>
                                    <Button x:Name="saveProfile4" Content="Save" Click="SaveProfile_Click" Tag="4" Margin="2"/>
                                    <Button x:Name="loadProfile4" Content="Load" Click="LoadProfile_Click" Tag="4" Margin="2"/>
                                </StackPanel>

                                <StackPanel Grid.Column="4" Margin="4">
                                    <TextBlock Text="Profile 5" FontSize="12" Margin="0,0,0,6" HorizontalAlignment="Center"/>
                                    <Button x:Name="saveProfile5" Content="Save" Click="SaveProfile_Click" Tag="5" Margin="2"/>
                                    <Button x:Name="loadProfile5" Content="Load" Click="LoadProfile_Click" Tag="5" Margin="2"/>
                                </StackPanel>
                            </Grid>
                            <CheckBox x:Name="applyOnStartupCheckBox"
                                     Content="Apply current settings on startup"
                                     Margin="4,10,4,4"
                                     Foreground="{StaticResource TextPrimaryBrush}"
                                     Checked="ApplyOnStartupCheckBox_Checked"
                                     Unchecked="ApplyOnStartupCheckBox_Unchecked"/>
                        </StackPanel>
                    </Border>

                    <!-- Zones Panel -->
                    <Border Style="{StaticResource CardBorderStyle}">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Illumination Zones" FontWeight="SemiBold" FontSize="14"/>
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MinHeight="50">
                                <ItemsControl x:Name="gpuIlluminationZones">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                </ItemsControl>
                            </ScrollViewer>
                            <Button x:Name="applyAllButton" Content="Apply All" IsEnabled="False" HorizontalAlignment="Right"
                                            Padding="12,6" Click="applyAllButton_Click"
                                            Style="{StaticResource SecondaryButtonStyle}"/>
                        </StackPanel>
                    </Border>

                    <!-- Status bar -->
                    <Border Background="{StaticResource SurfaceBrush}"
                            BorderBrush="{StaticResource CardBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="10"
                            Margin="0,0,0,12">
                        <DockPanel>
                            <TextBlock x:Name="statusText"
                                       Text="Ready"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       VerticalAlignment="Center"/>
                            <Ellipse Width="10"
                                     Height="10"
                                     Fill="{StaticResource AccentAltBrush}"
                                     Margin="8,0,0,0"
                                     VerticalAlignment="Center"/>
                        </DockPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
